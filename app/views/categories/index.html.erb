<h1 class="textwhite">Categories list</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <%= link_to "All",categories_path(status: "all") %>
        <li class="nav-item">
            <%= link_to "Learned",categories_path(status: "learned") %>
        </li>
        <li class="nav-item">
            <%= link_to "Not learned",categories_path(status: "unlearned") %>
        </li>

        <div class="row">
           <% unless @cats.size == 0 %>
            <% @cats.each do |cat| %>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= cat.title %></h5>
                                <p class="card-text"><%= cat.description %></p>
                                    <% if @lessons_category.include?(cat.id) %>
                                        <p>learned</p> 
                                    <% else %>
                                        <%= link_to "start",lessons_path(category_id: cat.id, user_id: current_user), method: :post %>
                                    <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% else %>
             <h1>nothing matches</h1>
           <% end %>
                
        </div>
    </li>
</ul>


  
    
  
