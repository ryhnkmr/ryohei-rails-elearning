<h1>Categories list</h1>

<% @cats.each do |cat| %>
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= cat.title %></h5>
                <p class="card-text"><%= cat.description %></p>
                <%= link_to "start" %>
            </div>
            </div>
        </div>
    </div>
<% end %>