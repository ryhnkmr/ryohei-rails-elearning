<h1 class="text-center border-bottom p-4 mb-3 ">Users</h1>
<div class="row">
    <% @users.each do |user| %>
        <div class="col-lg-6">
            <div class="media mb-3">
                <div class="align-self-center mr-3 border ">
                    <% if user.image? %>
                        <%= image_tag user.image.url,:size => "80x80"%>
                    <% else %>
                        <%= link_to gravatar_for(user), user_path(user) %>
                    <% end %>
                </div>
                <div class="media-body">
                    <h4><%= link_to user.name, user %></h4>
                </div>

                <% unless current_user == user%>
                    <%= admin(user) %>
                    
                    <% if current_user.admin? %>
                        <%= link_to "delete", user , method: :destroy,class: "btn btn-outline-danger float-right btn-sm ml-2",
                                                                    data: {confirm: "Are you sure?" } %>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% end %>
    <div class="paginate border-top pt-3 ">
        <%= will_paginate %>
    </div>
</div>


