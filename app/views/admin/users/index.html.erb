<h1 class="text-center border-bottom p-4 mb-3 ">Users</h1>
<div class="row">
    <% @users.each do |user| %>
        <div class="col-lg-6">
            <div class="media mb-3">
                <div class="align-self-center mr-3 border ">
                    <%= link_to gravatar_for(user), user_path(user) %>
                </div>
                <div class="media-body">
                    <h4><%= link_to user.name, user %></h4>
                </div>

                <% unless current_user == user%>
                    <% if user.admin? %>
                        <%= link_to "  remove from admin", admin_user_path(user),class: "btn btn-outline-danger float-right btn-sm " ,method: :delete %>
                    <% else %>
                        <%= link_to "  set as admin",admin_user_path(user), class: "btn btn-outline-info float-right btn-sm ",method: :patch %>
                    <% end %>
                    
                    <% if current_user.admin? %>
                        <%= link_to "delete", user , method: :destroy,class: "btn btn-outline-danger float-right btn-sm ",
                                                                    data: {confirm: "Are you sure?" } %>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div class="paginate text-center border-top pt-3">
    <%= will_paginate %>
</div>
