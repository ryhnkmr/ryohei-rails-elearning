<h1 class="text-center  pb-0 pt-0">Users</h1>
<div class="row text-center">
    <% @users.each do |user| %>
        <div class="col-lg-6">
            <div class="media ">
                <div class="align-self-center mr-3 border ">
                    <%= link_to gravatar_for(user), user_path(user) %>
                </div>
                <div class="media-body">
                    <h4><%= link_to user.name, user%></h4>
                </div>
                <% if current_user == user.id %>
                    <%= link_to "delete", user , method: :destroy,class: "btn btn-outline-danger float-right btn-sm ",
                                                                    data: {confirm: "Are you sure?" } %>
                <% end %>
            </div>
        </div>
    <% end %>
    <div class="paginate pt-3 text-center">
        <%= will_paginate %>    
    </div>
</div>


